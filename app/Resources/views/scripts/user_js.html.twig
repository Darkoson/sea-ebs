            function setTaille() {
                var t_sidebar = $('#side-menu').height();
                var t_content = $('#pagecontent').height();
                if (t_sidebar > t_content) {
                    $('#pageconentwrapper').css("height", (t_sidebar + 5) + "px");
                } else if (t_sidebar < t_content) {
                    $('#pageconentwrapper').css("height", (t_content + 5) + "px");
                }
            }


            window.onload = function () {
                date_heure('div_horloge');
            };


            function date_heure(id)
            {
                date = new Date;
                annee = date.getFullYear();
                moi = date.getMonth();
                mois = new Array('Janvier', 'F&eacute;vrier', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Ao&ucirc;t', 'Septembre', 'Octobre', 'Novembre', 'D&eacute;cembre');
                j = date.getDate();
                jour = date.getDay();
                jours = new Array('Dimanche', 'Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi');
                h = date.getHours();
                if (h < 10)
                {
                    h = "0" + h;
                }
                m = date.getMinutes();
                if (m < 10)
                {
                    m = "0" + m;
                }
                s = date.getSeconds();
                if (s < 10)
                {
                    s = "0" + s;
                }
                resultat = jours[jour] + ' ' + j + ' ' + mois[moi] + ' ' + annee + ' il est ' + h + ':' + m + ':' + s;
                document.getElementById(id).innerHTML = resultat;
                setTimeout('date_heure("' + id + '");', '1000');
                return true;
            }
