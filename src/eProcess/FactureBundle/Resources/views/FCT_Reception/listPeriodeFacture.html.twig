{% extends "eProcessFactureBundle:FCT_Reception:index.html.twig" %}

{% block page_content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-bar-chart-o fa-fw"></i> Liste des factures arrivées par période  
            <div class="pull-right">
                <div class="btn-group">
                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                        Actions
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu pull-right" role="menu">
                        <li><a href="#" onclick="">Imprimer la liste</a>
                        <li class="divider"></li>
                        <li><a href="#"  onclick="">Exporter sous Excel</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
        <div class="row">

            <div class="col-lg-12">
                <form class="" method="POST" action="{{path('facture_liste_periode')}}"> 
                     <div class="row well">
                        <div class="form-group   col-lg-4  col-md-4">
                            Date début : <input type="text" class=" datetime center form-control" name="dateDebut" value="{{dateDebut}}">
                        </div>
                         
                        <div class="form-group col-lg-4 col-md-4">
                            Date Fin :<input type="text" class=" datetime center form-control" name="dateFin" value="{{dateFin}}">
                        </div>
                        <div class="form-group col-lg-2 col-md-4">
                            <button type="submit" class="btn btn-success " style="margin-top: 17px;">Rechercher </button>
                        </div>
                    </div>
                    
                </form>
            </div >
            
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover"  id="dataTables-example" >
                    <thead class="element">
                        <tr class="alert-warning">
                            <th > <input type="checkbox" class="checkall" name="checkall"/> </th>
                            <th >Date Arrive</th>
                            <th >Ordre</th>
                            <th >Réf Facture</th>
                            <th >Fournisseur</th>
                            <th >Objet</th>
                            <th >Devise</th>
                            <th >Montant</th>
                                {#                                <th colspan="" ><center>Actions</center></th>#}
                        </tr>
                    </thead>
                    <tbody >
                        {%for entity in listeFactureArrive%}
                            <tr class="odd gradeX">
                                <td><input type="checkbox" name="tab[]" value="{{entity.id}}" rel="tab_c" /></td>
                                <td>{{ entity.dateArrive|date('d-m-Y') }}</td>
                                <td>{{ entity.ordreArrive }}</td>
                                <td>{{ entity.referenceFournisseur }}</td>
                                <td>{{ entity.achat.fournisseur }}</td>
                                <td>{{ entity.achat.objet }}</td>
                                <td>{{ entity.achat.devise }}</td>
                                <td>{{ entity.achat.montant }}</td>
                                {# <td class="center">
                                     {% if entity.isActif %} <i class="alert-success fa fa-check-circle fa-fw"></i>
                                     {% else %} <i class="alert-danger fa fa-ban fa-fw"> {% endif %}
                                 </td>
                                 <td><a href="{{path('edit_departement',{'idDepartement': entity.id})}}" class="btn  fa fa-edit fa-fw " title="Modifier  {{entity.nom }}"><i class=""></i></a></td>
                            #} </tr>
                            {% endfor %}                    
                    </tbody>
                </table>

                {#                {%endfor %} #}
            </div>
            <!-- /.table-responsive -->
        </div>
        </div>
        <!-- /.panel-body -->
    </div>

{% endblock %}


{% block javascripts %} 
    {{parent()}}

{% endblock %}


