<div class="panel panel-info" style="margin-top: 10px;">
    <div class="panel-heading">
        <center>{{achat.objet}} </center>
            {#        {{form_widget(form.objet)}}#}
    </div>
</div>


<ul class="chat" style="margin: 10px;">

    {#   Block des fichiers de bon de commande    #}
    <li class=" clearfix ">
        <div class="chat-panel  row" style="margin-bottom: 30px; width: 80% ; resize: none">
            <div class="header col-lg-2">
                Motif
            </div>
            <div class=" col-lg-10">
                <textarea type="text"  id="motif" name="motif" class="form-control" maxlength="255" > </textarea>
            </div>

        </div>
    </li>
    <li class=" clearfix ">
        <div class="chat-panel  row">

            <table class="table table-striped table-bordered table-hover ">
                <thead class="">
                    <tr class="">
                        <th class=""><small>Réceptionniste </small></th>
                        <td class="">{{receptionniste}}</td>
                        <th class=""><small>Date réception</small></th>
                        <td class="">{{entity.dateArrive|date('d-m-Y H:i:s') }}</td>
                    </tr>
                </thead>
                <tbody class="">
                    <tr class="">
                        <th class="" ><small>Montant</small></th>
                            {% if bonCommande %}
                            <td class="col-lg-4"><input  type="text" disabled="" style=" width: 100px" value="{{achat.montant}}" /></td>
                            {% else %}
                            <td class="">{{ form_widget(form.montant) }}</td>
                        {% endif  %}
                        <th class=""><small>Arrivée Traitement</small></th>
                        <td class="">{{ entity.dateArrive|date('d-m-Y H:i:s')}} </td>
                    </tr> 
                    <tr class="">
                        <th class=""><small>Devise</small></th>
                            {% if bonCommande %}
                            <td class="col-lg-4"><input  type="text" disabled="" style=" width: 100px" value="{{achat.devise}}" /></td>
                            {% else %}
                            <td  class="">{{ form_widget(form.devise) }} </td>
                        {% endif  %}

                        <th class=""><small>Durée Traitement</small></th>
                        <td  class="">{{ getDureeJoursAction(entity.dateArrive )}}</td>
                    </tr>


                </tbody>
            </table>

        </div>
    </li>

</ul>


{#</div>#}






