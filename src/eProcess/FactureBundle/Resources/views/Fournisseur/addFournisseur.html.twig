{% extends "eProcessFactureBundle:Fournisseur:index.html.twig" %}

{% block page_content_left %}

    <div class="panel panel-default row">
        <div class="panel-heading col-lg-12" >
            <i class="fa fa-bar-chart-o fa-fw"></i> Enregistrement d'un fournisseur 
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body col-lg-12 col-md-12 col-sm-12">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="row">

                <div class="form-group col-lg-4 col-md-4 col-sm-4">
                    <label  class=" ">Nom du fournisseur : (*)</label>
                    <div class="">
                        {{ form_widget(form.nom) }}
                    </div>
                </div>

                <div class="form-group col-lg-4 col-md-4 col-sm-4">
                    <label class="">Telephone :</label>
                    {{ form_widget(form.telephone) }}
                </div>    

                <div class="form-group col-lg-4 col-md-4 col-sm-4">
                    <label class="">Email :</label>
                    {{ form_widget(form.email) }}
                </div>
            </div>


            <div class="row">


                <div class="form-group  col-lg-4 col-md-4 col-sm-4">
                    <label class="">Pays : (*)</label>
                    {{ form_widget(form.pays) }}
                </div>
                <div class="form-group  col-lg-4 col-md-4 col-sm-4">
                    <label class="">Devise  : (*)</label>
                    {{ form_widget(form.devisePrefere) }}
                </div>
                <div class="form-group col-lg-4 col-md-4 col-sm-4">
                    <label class="">Lanque :</label>
                    {{ form_widget(form.languePrefere) }}
                </div>
            </div>

            <div class="row">
                <div class="form-group  col-lg-4 col-md-4 col-sm-4">
                    <label class="">Type d'Organisation :</label>
                    {{ form_widget(form.typeOrganisation) }}
                </div>
                <div class="form-group  col-lg-4 col-md-4 col-sm-4">
                    <label class="">Representant  :</label>
                    {{ form_widget(form.representant) }}
                </div>
                <div class="form-group col-lg-4 col-md-4 col-sm-4">
                    <label class="">Existe Contrat : (*)</label>
                    {{ form_widget(form.hasContrat) }}
                </div>
            </div>

            <div class="row">
                <div class="form-group  col-lg-4 col-md-4 col-sm-4">
                    <label class="">Boîte Postale :</label>
                    {{ form_widget(form.boitePostale) }}
                </div>
                <div class="form-group  col-lg-8 col-md-8 col-sm-8">
                    <label class="">Adresse  :</label>
                    {{ form_widget(form.adresse) }}
                </div>
            </div>

            <div class="row">
                <div class="form-group  col-lg-4 col-md-4 col-sm-4">
                    <label class="">Compte :</label>
                    {{ form_widget(form.compteBancaire) }}
                </div>
                <div class="form-group  col-lg-4 col-md-4 col-sm-4">
                    <label class="">Agence  :</label>
                    {{ form_widget(form.agence) }}
                </div>
                <div class="form-group col-lg-4 col-md-4 col-sm-4">
                    <label class="">Banque :</label>
                    {{ form_widget(form.banque) }}
                </div>
            </div>


            <div class="row">
                <div class="form-group  col-lg-8 col-md-8 col-sm-8">
                    <label class="">Mode de règlement :</label>
                    {{ form_widget(form.modePaiement) }}
                </div>

            </div>

            <div class="row">
                <div class="form-group  col-lg-8 col-md-8 col-sm-8" id="ficConrat"  style="">
                    {{ form_widget(form.fichier) }}
                </div>
            </div>    


            <div class="row">
                <div class="form-group  col-lg-12 col-md-12 col-sm-12">
                    <button type="submit" class="btn btn-success"  style="margin-left: 30px;">Enregistrer </button>
                    <button type="reset" class="btn btn-primary">Annuler</button>
                </div>

            </div>








        </div>


        {{ form_end(form) }}



    </div>



{% endblock %}


{% block javascripts %} 
    {{parent()}}
    <script>
    </script>

{% endblock %}

