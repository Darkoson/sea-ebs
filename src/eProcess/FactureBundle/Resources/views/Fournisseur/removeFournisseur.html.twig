{% extends "eProcessFactureBundle:Fournisseur:index.html.twig" %}

{% block page_content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-bar-chart-o fa-fw"></i> Liste des Fournisseurs supprimables
            <div class="pull-right">
                <div class="btn-group">
                    <button type="button" onclick="enregistrer(getIDs(), false, 1);" class="btn btn-danger btn-xs dropdown-toggle" data-toggle="dropdown">
                        Supprimer
                    </button>

                </div>
            </div>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">

            <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" >
                        <thead class="element">
                            <tr class="alert-warning">
                                <th > <input type="checkbox" class="checkall" name="checkall"/> </th>
                                <th >Nom</th>
                                <th >Telephone</th>
                                <th >Email</th>
                                <th ><center>Actions</center></th>
                            </tr>
                        </thead>
                        <tbody >
                        {%for entity in listeFournisseur%}
                            <tr class="odd gradeX">
                                <td><input type="checkbox" name="tab[]" value="{{entity.id}}" rel="tab_c" /></td>
                                <td>{{ entity.nom }}</td>
                                <td>{{ entity.telephone }}</td>
                                <td>{{ entity.email }}</td>
                                <td><a href="{{path('edit_utilisateur',{'idFournisseur': entity.id})}}" class="btn  fa fa-edit fa-fw " title="Modifier  {{entity.nom}}"><i class=""></i></a></td>
{#                                <td><a href="#" onclick="enregistrer('{{entity.id}}', false, 0);" class="btn fa  fa-times fa-fw " title="Supprimer:  {{entity.nom}}"><i class=" "></i></a></td>#}
                            </tr>
                        {% endfor %}                    
                        </tbody>
                    </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>


{% endblock %}






{% block javascripts %} 
    {{parent()}}
    <script> </script>
{% endblock %}


