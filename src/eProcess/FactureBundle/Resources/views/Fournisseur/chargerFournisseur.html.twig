{% extends "eProcessFactureBundle:Fournisseur:index.html.twig" %}

{% block page_content_left %}
    <div class="panel panel-info">
        <div class="panel-heading">
            <i class="fa fa-file-archive-o fa-fw"></i> Chargement des fournisseurs à partir d'un  fichier Excel

        </div>
        <!-- /.panel-heading -->
        <div class="panel-body well">

            <div class="  upAndDownSpace">
                <center> <button class="btn btn-warning"  id="btn_modeleFileFournisseur"> <b> <em> Voir le modèle de fichier à charger</em> </b> </button></center>
            </div>


            {{ form_start(form) }}
            <div class=" row well upAndDownSpace">

                <div class=" col-lg-1 col-md-12 col-sm-12">
                    {{ form_widget(form.fichier) }}
                </div>
            </div>

            <div class="  row upAndDownSpace">
                <div class="col-lg-3 col-md-3 col-sm-3">
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <button type="reset"  class=" btn btn-primary">Annuler</button>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <button type="submit" class=" btn btn-success">Charger </button>
                </div>



            </div>

            {{ form_end(form) }}


        </div>
        <!-- /.panel-body -->
    </div>

            
     
    {% if resultat is defined %}
        <div class="panel panel-info">
            <div class="panel-heading">
                <i class="fa fa-file-archive-o fa-fw"></i> Résultat du fichier Chargé 
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body " style="">

                <div class=" row">
                    <table class="table table-striped  table-hover col-lg-12">
                        <tr class="row">
                            <th class="col-lg-6">Feuillet</th>
                            <th class="col-lg-2"> Fournisseur Total</th>
                            <th class="col-lg-2">Chargés</th>
                            <th class="col-lg-2">Non Chargés</th>
                        </tr>

                        {% for feullet in resultat %}
                            <tr class="row">
                                <td  class="col-lg-6">{{ feullet.titre }} </td>
                                <td  class="col-lg-2">{{ feullet.total }} </td>
                                <td  class="col-lg-2">{{ feullet.charge }} </td>
                                <td  class="col-lg-2">{{ feullet.total - feullet.charge }} </td>
                            </tr>
                        {% else  %}
                             <tr class="row">
                                 <td colspan="4"><center> Aucun feuillet chargé</center> </td>
                            </tr>
                        {% endfor  %}

                    </table>
                </div>
                        
                <div class="  row upAndDownSpace">
                    <div class="col-lg-3 col-md-3 col-sm-3">
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <a href="{{path('list_new_fournisseur')}}"><button   class=" btn btn-primary"> Consulter les Fournisseurs Chargés</button></a>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                       
                    </div>
                </div>
            </div>
        </div>

    {% endif  %}

     
            
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"> <center>Format du fichier Excel contenant la liste des Fournisseurs </center></h4>
      </div>
      <div class="modal-body">
       
          <div class="">
          
           <table class="   table-condensed table-bordered table-hover table-striped ">
                                    <tr>
                                        <th><center> A  </center></th>
                                        <th><center> B  </center></th>
                                        <th><center> C  </center></th>
                                        <th><center> D  </center></th>
                                        <th><center> E  </center></th>
                                        <th><center> F  </center></th>
                                        <th><center> G  </center></th>
                                        <th><center> H  </center></th>
                                        <th><center> I  </center></th>
                                        <th><center> J  </center></th>
                                        <th><center> K  </center></th>
                                        <th><center> L  </center></th>
                                        <th><center> M  </center></th>
                                        <th><center> N  </center></th>
                                        <th><center> 0  </center></th>
                                        <th><center> P  </center></th>
                                    </tr>

                                    {% for i in 0..5 %}
                                        <tr>
                                            <td><center>Nom du Fournisseur  </center></td>
                                            <td><center>Devise Préférée  </center></td>
                                            <td><center>Langue Préférée  </center></td>
                                            <td><center>Type d'Organisation   </center></td>
                                            <td><center>Verification (Done / Not Done)  </center></td>
                                            <td><center>Telephone  </center></td>
                                            <td><center>Email  </center></td>
                                            <td><center>Contract (Yes/No)  </center></td>
                                            <td><center>Representant  </center></td>
                                            <td><center>Agence Banque  </center></td>
                                            <td><center>Adresse  </center></td>
                                            <td><center>Boite Postale  </center></td>
                                            <td><center>Pays de résidence  </center></td>
                                            <td><center>Moyen de paiement  </center></td>
                                            <td><center>Compte Bancaire  </center></td>
                                            <td><center>Banque  </center></td>
                                        </tr>
                                    {% endfor %}		

                                </table>
          
          </div>
          
          
          
      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>
            
            
            

{% endblock %}






{% block javascripts %} 
    
    <style type="text/css">
        .modal-body {
            position: relative;
            overflow-y: auto;
            max-height: 600px;
            padding: 10px;
        }
    </style>
    
    {{parent()}}
    <script type="text/javascript">
       $('#btn_modeleFileFournisseur').click(function (){
            $('#myModal').modal('toggle') ;
       }); 
      
  </script> 
{% endblock %}


