{% extends "eProcessSecurityBundle:Menu:index.html.twig" %}





{% block page_content_left %}


    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-bar-chart-o fa-fw"></i> Liste des Menus à Désactiver
            <div class="pull-right">
                <div class="btn-group">
                    <button type="button" class="btn btn-danger btn-xs "  onclick="updateRight(getIDs());" >
                        Désactiver
                    </button>
                </div>
            </div>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">

            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th><input type="checkbox" class="checkall" name="checkall"/></th>
                            <th>Menu</th>
                            <th>Description</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>

                        {% for menu in listeMenu %}
                            <tr class="odd gradeX">
                                <td><input type="checkbox" name="tab[]" value="{{menu.id}}" rel="tab_c" /></td>
                                <td>{{ menu.nom }}</td>
                                <td class="center">{{menu.action.description}}</td>
                                <td  class="center"> 
                                    {% if menu.isActif %}
                                        <i class="alert-success fa fa-check-circle fa-fw"></i>
                                    {% else %} 
                                        <i class="alert-danger fa fa-ban fa-fw"> 
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4"> <center> Aucun Menu </center></td>
                            </tr>
                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
                        
    <form id="formStatusMenu" method="POST" action="{{path('deactivate_menu')}}" style="display: none">   
        <input type="hidden" name="idMenusModif" id="idMenusModif">
    </form>                 
                        
{% endblock %}


{% block javascripts %} 
    {{parent()}}
    <script>
        function updateRight(ids){
            if(ids === ''){
                alert('Veuillez  selectionner un champ !');
            }
            else{
                
                $('#idMenusModif').val(ids);
                $('#formStatusMenu').submit();
                afficheImageExecution() ;
            }
            
        }
        
        
    </script>
{% endblock %}


