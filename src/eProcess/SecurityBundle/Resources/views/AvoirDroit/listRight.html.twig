{% extends "eProcessSecurityBundle:AvoirDroit:index.html.twig" %}

{% block page_content_left %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-bar-chart-o fa-fw"></i> Liste des droits du profil <em>{{profileActif.nom}}</em>
            
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">

            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Modules</th>
                            <th>Actions</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>

                        {% for line in listeDroit %}
                            <tr class="odd gradeX">
                                <td>{{line.mod}}</td>
                                <td class="center">{{line.description}}</td>
                                <td  class="center  "> {% if line.isActif %} <i class="alert-success fa fa-check-circle fa-fw"></i>
                                {% else %} <i class="alert-danger fa fa-ban fa-fw"> {% endif %}</td>
                                </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->


                    </div>
                    <!-- /.panel-body -->
                </div>

                {% endblock  %}


                    {% block javascripts %} 
                        <!-- Page-Level Demo Scripts - Tables - Use for reference -->
                       
                    {% endblock %}


