{% extends '::layout.html.twig' %}

{% block content -%}
    <h1>Action</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Route</th>
                <td>{{ entity.route }}</td>
            </tr>
            <tr>
                <th>Isaccessible</th>
                <td>{{ entity.isAccessible }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('action') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('action_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
