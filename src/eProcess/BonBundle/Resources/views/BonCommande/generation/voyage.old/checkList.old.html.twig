    /**
     * changerValeurs : fonction de changement des valeurs des checkboxs Ã  true ou false
     * 
     * @param 
     * @returns 
     */
    function changerValeurs() {
        $('input[type=checkbox]').each(function () {
            if ($(this).is(':checked')) {
                $(this).val(1);
            } else {
                $(this).val(0);
            }
        });
    }



